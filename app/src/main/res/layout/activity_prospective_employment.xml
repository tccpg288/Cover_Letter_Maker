<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:text="Complete All Fields Below"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Desired Position:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/pe_desired_position"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:hint="Lead Engineer" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Recruiter Name:"
                android:textSize="15sp" />
            <EditText
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:id="@+id/pe_recruiter_name"
                android:layout_height="wrap_content"
                android:hint="Jane Smith" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Recruiter E-Mail:"
                android:textSize="15sp" />
            <EditText
                android:layout_width="0dp"
                android:id="@+id/pe_recruiter_email"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:hint="jane.smith@company.com" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".31"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Job Source:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/pe_job_source"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:hint="Newspaper Ad; Recruiter" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".31"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Available Start Date:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/pe_start_date"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:hint="February 16" />
        </LinearLayout>
        <Button
            android:id="@+id/pe_save_data"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background = "@drawable/button_click"
            android:text="Save Data" />
    </LinearLayout>

</ScrollView>