<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:padding="16dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:textStyle="bold"
            android:text="Complete All Fields Below"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Current Employer:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/current_employer"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:hint="ABC Corp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Current Position:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/current_position"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:hint="Janitor" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".3"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Current Salary:"
                android:textSize="15sp" />
            <EditText
                android:layout_width="0dp"
                android:id="@+id/current_salary"
                android:layout_weight=".7"
                android:inputType="number"
                android:layout_height="wrap_content"
                android:hint="$100,000" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".31"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Current Responsibility:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/current_responsibility"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:hint="Sweep Floors" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight=".31"
                android:gravity="center_vertical"
                android:layout_height="match_parent"
                android:text="Years Experience:"
                android:textSize="15sp" />
            <EditText
                android:id="@+id/years_experience"
                android:layout_width="0dp"
                android:layout_weight=".7"
                android:layout_height="wrap_content"
                android:hint="10 Years" />
        </LinearLayout>
        <Button
            android:id="@+id/employment_history_save_data_button"
            android:layout_width="wrap_content"
            android:padding="20dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="16dp"
            android:background = "@drawable/button_click"
            android:text="Save Data" />
    </LinearLayout>

</ScrollView>

